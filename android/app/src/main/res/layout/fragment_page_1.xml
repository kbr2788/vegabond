<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="448dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo">

        <LinearLayout
            android:id="@+id/lL_pop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="인기순" />

            <HorizontalScrollView
                android:layout_width="414dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_p1"
                            android:layout_width="150dp"
                            android:layout_height="144dp"
                            app:srcCompat="@drawable/test2" />

                        <Button
                            android:id="@+id/btn_p1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Button" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_p2"
                            android:layout_width="150dp"
                            android:layout_height="144dp"
                            app:srcCompat="@drawable/test1" />

                        <Button
                            android:id="@+id/btn_p2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Button" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_p3"
                            android:layout_width="150dp"
                            android:layout_height="144dp"
                            app:srcCompat="@drawable/test3" />

                        <Button
                            android:id="@+id/btn_p3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Button" />
                    </LinearLayout>

                </LinearLayout>

            </HorizontalScrollView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lL_taste"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="관심사순" />

            <HorizontalScrollView
                android:layout_width="414dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_t1"
                            android:layout_width="match_parent"
                            android:layout_height="144dp"
                            app:srcCompat="@drawable/test2" />

                        <Button
                            android:id="@+id/btn_t1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Button" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_t2"
                            android:layout_width="150dp"
                            android:layout_height="144dp"
                            app:srcCompat="@drawable/test1" />

                        <Button
                            android:id="@+id/btn_t2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Button" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_t3"
                            android:layout_width="150dp"
                            android:layout_height="144dp"
                            app:srcCompat="@drawable/test3" />

                        <Button
                            android:id="@+id/btn_t3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Button" />
                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="225dp"
        android:layout_height="120dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />



</androidx.constraintlayout.widget.ConstraintLayout>


